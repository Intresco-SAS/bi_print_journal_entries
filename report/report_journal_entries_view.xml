<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<data>

		<template id="journal_entry_template_report_view">
			<t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
                <div class="page">
                    <div class="oe_structure" />

                    <div id="journal_information">
                        <table class="table table-bordered">
                            <tr>
                                <td>
                                    <strong>Diario : </strong>
                                    <span t-field="o.journal_id" />
                                </td>
                                <td>
                                    <strong>Entrada : </strong>
                                    <span t-field="o.name" />
                                </td>

                            </tr>
                            <tr>
                                <td>
                                    <strong>Fecha :</strong>
                                    <span t-field="o.date" />
                                </td>
                                <td>
                                    <strong>Referencia :</strong>
                                    <span t-field="o.ref" />
                                </td>
                            </tr>
                        </table>
                    </div>

                    <table style="width: 100%" class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>Cuenta</th>
                                <th>Tercero</th>
                                <th>No. Identificación</th>
                                <!--th>Descripción</th-->
                                <!--th>Due Date</th-->
                                <th>Cuenta Analitica</th>
                                <!--th>Impuesto(%)</th-->
                                <th>Debito</th>
                                <th>Credito</th>
                            </tr>
                        </thead>
                        <tbody class="consumed_tbody">
                            <t t-set="total" t-value="0.0" />
                            <t t-set="total1" t-value="0.0" />
                            <t t-foreach="o.line_ids" t-as="line">
                                <tr>
                                    <td>
                                        <span t-field="line.account_id.code" />
                                    </td>
                                    <td>
                                        <span t-field="line.partner_id" />
                                    </td>
                                    <td>
                                        <t t-if="line.partner_id.xidentification">
                                            <span t-field="line.partner_id.xidentification" />
                                        </t>
                                    </td>

                                    <!--td>
                                <span t-field="line.name"/>
                            </td-->
                                    <!--td>
                                <span t-field="line.date_maturity"/>
                            </td-->

                                    <!--td>
                                <span t-field="line.tax_ids"/>
                            </td-->
                                    <td>
                                        <t t-if="line.analytic_account_id.code">
                                            [
                                            <span t-field="line.analytic_account_id.code" />
                                            ]
                                        </t>
                                        <t t-if="line.analytic_account_id.name">
                                            <span t-field="line.analytic_account_id.name" />
                                        </t>
                                    </td>
                                    <td>
                                        <span t-field="line.debit" />
                                    </td>
                                    <td>
                                        <span t-field="line.credit" />
                                    </td>
                                </tr>
                                <t t-set="total" t-value="total + line.debit" />
                                <t t-set="total1" t-value="total1 + line.credit" />
                            </t>
                            <tr>
                                <td />
                                <td />
                                <td />
                                <td>
                                    <strong>Total:</strong>
                                </td>
                                <td width="10%">
                                    <strong>
                                        <span>
                                            $
                                            <t t-esc="'{:,}'.format(round(total,2))" />
                                        </span>
                                    </strong>
                                </td>
                                <td width="10%">
                                    <strong>
                                        <span>
                                            $
                                            <t t-esc="'{:,}'.format(round(total1,2))" />
                                        </span>
                                    </strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row" style="margin-top:30px">
                        <div class="col-4" align="center" style="text-transform: uppercase;">
                            _____
                            <u>
                                <t t-esc="o.create_uid.name" />
                            </u>
                            _____
                            <br />
                            ELABORADO POR
                        </div>
                        <div class="col-4" align="center">
                            ______________________________________
                            <br />
                            ACEPTADA, FIRMADA Y/O SELLO
                        </div>
                        <div class="col-4" align="center">
                            _________________________
                            <br />
                            FECHA
                        </div>
                    </div>


                </div>
            </t>
		</template>

		<template id="journal_entry_report_template_id">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="bi_print_journal_entries.journal_entry_template_report_view"  t-lang="o.partner_id.lang"/>
				</t>
			</t>
		</template>

	</data>
</odoo>
